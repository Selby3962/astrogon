              <Button label="- SETTING -" link="/rustpnk/docs/bsetting"/>
              <Button label="- FACTIONS -" link="/rustpnk/docs/cfactions"/>
              <Button label="- TABLES -" link="/rustpnk/docs/etables"/>
              <Button label="- MAP -" link="/rustpnk/about"/>
              <Button label="- INDEX -" link="/rustpnk/docs/"/>
