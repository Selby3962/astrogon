---
import ThemeSwitcher from "@components/base/ThemeSwitcher.astro";
import { IoSearch } from "react-icons/io5";

const { pathname } = Astro.url;

const stickyHeader = true;

const menu = [
  {
    name: "Home",
    url: "/rustpnk/",
  },
  {
    name: "Character Creation",
    url: "/rustpnk/docs/arules/character-creation",
  },
  {
    name: "System",
    url: "/rustpnk/docs/arules",
  },
  {
    name: "Setting",
    url: "/rustpnk/docs/bsetting",
  },
  // {
  //   name: "Factions",
  //   url: "/rustpnk/docs/cfactions",
  // },
  // {
  //   name: "Misc Topics",
  //   url: "/rustpnk/docs/dothertopics",
  // },
  {
    name: "Tables",
    url: "/rustpnk/docs/etables",
  },
  // {
  //   name: "City Map",
  //   url: "/rustpnk/about",
  // }
];
---
